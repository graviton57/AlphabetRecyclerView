<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/alphabetical_item_padding"
    android:background="@android:color/transparent"
    android:layout_width="@dimen/alphabetical_item_size"
    android:layout_height="@dimen/alphabetical_item_size">

    <TextView
        android:id="@+id/item_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/alphabetical_item_text_padding"
        android:textStyle="bold"
        android:gravity="bottom|start"
        android:textSize="18sp"
        tools:textColor="@android:color/white"
        tools:background="@android:color/holo_green_dark"
        tools:text="A" />
</RelativeLayout>