<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/header_text_padding"
    android:background="@color/activated"
    android:paddingLeft="@dimen/header_left_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/id_tv_head_item"
        android:gravity="bottom|start"
        android:background="@drawable/header_bg"
        android:layout_width="@dimen/header_text_width"
        android:layout_height="@dimen/header_text_width"
        android:padding="@dimen/header_text_padding"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="A"
        />
</RelativeLayout>
